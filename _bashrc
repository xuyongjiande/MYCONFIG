#export PATH=/opt/rh/devtoolset-3/root/usr/bin:$PATH

alias undelay='fun()
    {
        save=`cat /tmp/tcdelay.save.$1`
        sudo tc qdisc del dev $1 root netem delay $save
    }; fun'
alias delay='fun()
    {
        undelay $1
        sudo tc qdisc add dev $1 root netem delay $2
        echo $2 > /tmp/tcdelay.save.$1
    }; fun'
